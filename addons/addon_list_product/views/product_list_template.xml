<odoo>
    <template id="product_list_template" name="Product List">
        <t t-call="website.layout">
            <div class="container">
                <h2 class="text-center mt-4">Danh Sách Sản Phẩm</h2>
                <div class="row">
                    <t t-foreach="products" t-as="product">
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img t-att-src="'/web/image/product.template/%d/image_1024' % product.id" class="card-img-top"/>
                                <div class="card-body">
                                    <h5 class="card-title" t-esc="product.name"/>
                                    <p class="card-text">
                                        Giá: <t t-esc="product.list_price"/> đ
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>